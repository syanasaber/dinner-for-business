  var array = <%= @value.to_s.html_safe %> ;
  
  
  function create_station_select () {
  
  var element = document.getElementById("search_by_station");
  var len = element.length
  for (i = len-1; i >= 0; i--) { 
      element.remove(i);
      }
  
  for (var i = 0; i < array.length; i++) { 
      var station = array[i];
      var select = document.getElementById("search_by_station");
      var option = document.createElement("option");
      option.text = station;
      option.value = station;
      select.appendChild(option);
        }
    }
    
    
    
       create_station_select(array);
    

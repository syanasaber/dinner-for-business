<div class="row">
        <aside class="col-sm-4">    
    
            <h2>口コミの投稿</h2>
            
            <%= form_with(model: current_user.reviews.build, local: true) do |f| %>
               
              <%= f.text_field :title, class: "text_field" %>
              <%= hidden_field_tag :article_id, @article.id %>
              <%= hidden_field_tag :user_id, current_user.id %>
              <%= f.text_area :content, class: "text_area" %>
              <%= f.submit '投稿', class: "submit-btn" %>
            <% end %>
        </aside>


         <div class="col-sm-8">
                <ul class="nav nav-tabs nav-justified mb-3">
                    <li class="nav-item"><a href="<%= article_path %>" class="nav-link <%= 'active' if current_page?(article_path) %>">
                        概要</a></li>
                    
                    <li class="nav-item"><a href="<%= reviewing_article_path %>" class="nav-link <%= 'active' if current_page?(reviewing_article_path) %>">口コミ<span class="badge badge-secondary"></span></a></li>
                </ul>
            
            <%= render 'articles/article_review', reviews: @reviews %>
        
        </div>
</div>





